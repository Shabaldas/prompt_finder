<div class="min-h-screen flex items-center justify-center bg-gray-200">
  <div class="bg-white p-8 rounded-lg shadow-md w-full sm:w-5/6 lg:w-2/3">
    <h1 class="text-4xl font-semibold mb-4" >
      <span class="ml-2 mb-8">Prompts searching</span>
    </h1>
    <%= form_with(url: "/search", method: "post", local: false) do |form| %>
      <div class="flex items-center border rounded-lg p-4">
        <%= form.text_field :query, placeholder: "Type to search something...", class: "w-full px-4 py-2 rounded-lg outline-none" %>
        <%= form.submit "Search", class: "bg-blue-500 text-white px-4 py-2 rounded-lg ml-2" %>
      </div>
    <% end %>
    <div id="results">
      <%= render partial: 'search_results', locals: { results: @results } %>
    </div>
  </div>
</div>
